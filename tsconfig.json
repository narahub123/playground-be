{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "paths": {
      "@db/*": ["db/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@swagger/*": ["swagger/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@controllers": ["controllers"],
      "@controllers/*": ["controllers/*"],
      "@services": ["services"],
      "@services/*": ["services/*"]
    },
    "typeRoots": ["./node_module/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
